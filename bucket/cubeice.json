{
    "version": "2.2.0",
    "description": "CubeICE is a file archiver that prevents problems with garbled characters when decompressing files.",
    "homepage": "https://www.cube-soft.jp/cubeice/",
    "license": "Apache-2.0",
    "pre_install": [
        "$items = @{",
        "    \"dll\" = @(",
        "        \"AlphaFS\",",
        "        \"Cube.Core\",",
        "        \"Cube.FileSystem.AlphaFS\",",
        "        \"Cube.FileSystem.SevenZip\",",
        "        \"Cube.FileSystem.SevenZip.Ice\",",
        "        \"Cube.Forms\",",
        "        \"Cube.Net\",",
        "        \"Cube.Services\",",
        "        \"NLog\"",
        "    )",
        "    \"exe\" = @(",
        "        \"CubeChecker\",",
        "        \"cubeice\",",
        "        \"cubeice-associate\",",
        "        \"cubeice-setting\"",
        "    )",
        "    \"config\" = @(",
        "        \"CubeChecker.exe\",",
        "        \"cubeice.exe\",",
        "        \"cubeice-associate.exe\",",
        "        \"cubeice-setting.exe\"",
        "    )",
        "}",
        "$append = \",1\"",
        "foreach ($item in $items.GetEnumerator()) {",
        "    $ext = $item.Name",
        "    foreach ($i in $item.Value) {",
        "        Copy-Item \"$dir\\$i$append.$ext\" \"$dir\\$i.$ext\"",
        "    }",
        "}"
    ],
    "bin": [
        "CubeChecker.exe",
        "cubeice.exe",
        "cubeice-associate.exe",
        "cubeice-setting.exe"
    ],
    "shortcuts": [
        [
            "cubeice.exe",
            "CubeICE"
        ],
        [
            "cubeice-setting.exe",
            "CubeICE Setting"
        ]
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-2.2.0-x64.exe",
            "hash": "8eed29185416e88df746296729d3876cb22fa01a48655854d1bdd1bac39e6b22"
        },
        "32bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-2.2.0-x86.exe",
            "hash": "b024a2c3bfd910a7ffc74cc6b93725047850708b76c0041ca31978b6859fd04c"
        }
    },
    "innosetup": true,
    "checkver": {
        "url": "https://www.cube-soft.jp/cubeice/releases.php",
        "regex": "cubeice-([\\d.]+).exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x64.exe"
            },
            "32bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x86.exe"
            }
        }
    }
}
