{
    "version": "2.1.0",
    "description": "CubeICE is a file archiver that prevents problems with garbled characters when decompressing files.",
    "homepage": "https://www.cube-soft.jp/cubeice/",
    "license": "Apache-2.0",
    "pre_install": [
        "$items = @{",
        "    \"dll\" = @(",
        "        \"AlphaFS\",",
        "        \"Cube.Core\",",
        "        \"Cube.FileSystem.AlphaFS\",",
        "        \"Cube.FileSystem.SevenZip\",",
        "        \"Cube.FileSystem.SevenZip.Ice\",",
        "        \"Cube.Forms\",",
        "        \"Cube.Net\",",
        "        \"Cube.Services\",",
        "        \"NLog\"",
        "    )",
        "    \"exe\" = @(",
        "        \"CubeChecker\",",
        "        \"cubeice\",",
        "        \"cubeice-associate\",",
        "        \"cubeice-setting\"",
        "    )",
        "    \"config\" = @(",
        "        \"CubeChecker.exe\",",
        "        \"cubeice.exe\",",
        "        \"cubeice-associate.exe\",",
        "        \"cubeice-setting.exe\"",
        "    )",
        "}",
        "$append = \",1\"",
        "foreach ($item in $items.GetEnumerator()) {",
        "    $ext = $item.Name",
        "    foreach ($i in $item.Value) {",
        "        Copy-Item \"$dir\\$i$append.$ext\" \"$dir\\$i.$ext\"",
        "    }",
        "}"
    ],
    "bin": [
        "CubeChecker.exe",
        "cubeice.exe",
        "cubeice-associate.exe",
        "cubeice-setting.exe"
    ],
    "shortcuts": [
        [
            "cubeice.exe",
            "CubeICE"
        ],
        [
            "cubeice-setting.exe",
            "CubeICE Setting"
        ]
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-2.1.0-x64.exe",
            "hash": "c14000bd6cfc2081d488ed88218616c38c0d04ef9a55f2a1d58c9d66a4aaa3f5"
        },
        "32bit": {
            "url": "https://dl.cube-soft.jp/archive/cubeice-2.1.0-x86.exe",
            "hash": "91f029dbb6c708d26f34e21a7baa9b00075d9e970f55ee6823b53441f7770c2f"
        }
    },
    "innosetup": true,
    "checkver": {
        "url": "https://www.cube-soft.jp/cubeice/releases.php",
        "regex": "cubeice-([\\d.]+).exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x64.exe"
            },
            "32bit": {
                "url": "https://dl.cube-soft.jp/archive/cubeice-$version-x86.exe"
            }
        }
    }
}
